# Application Settings
APP_NAME="Agentic Warehouse Forecasting System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# Server Configuration
HOST="0.0.0.0"
PORT=9000

# Database Configuration
# Choose ONE of the following database options:

# Option 1: SQLite (Development - Default)
DATABASE_URL="sqlite:///./data/databases/warehouse.db"

# Option 2: MySQL/MariaDB (Production)
# DATABASE_URL="mysql+pymysql://user:password@localhost:3306/warehouse_db"
# Or with mysqlclient driver (more performant):
# DATABASE_URL="mysql+mysqldb://user:password@localhost:3306/warehouse_db"

# Option 3: PostgreSQL (Production)
# DATABASE_URL="postgresql://user:password@localhost:5432/warehouse_db"

# MySQL Specific Settings (optional)
MYSQL_HOST="localhost"
MYSQL_PORT=3306
MYSQL_USER="warehouse_user"
MYSQL_PASSWORD="your-password-here"
MYSQL_DATABASE="warehouse_db"
MYSQL_CHARSET="utf8mb4"

# IBM watsonx Configuration
WATSONX_API_KEY="your-watsonx-api-key-here"
WATSONX_PROJECT_ID="your-project-id-here"
WATSONX_URL="https://us-south.ml.cloud.ibm.com"

# API Keys (Optional - for enhanced features)
SERPAPI_KEY=""  # For Google Trends
REDDIT_CLIENT_ID=""
REDDIT_CLIENT_SECRET=""
YOUTUBE_API_KEY=""

# AI Models - Gemini for Summaries & Carbon Tips
GEMINI_API_KEY=""  # Get from: https://makersuite.google.com/app/apikey
OPENAI_API_KEY=""  # Alternative AI provider (optional)

# Redis (for task queue)
REDIS_URL="redis://localhost:6379/0"

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# ML Model Settings
MODEL_RETRAIN_DAYS=7
MIN_TRAINING_DAYS=14
FORECAST_CONFIDENCE_THRESHOLD=0.5

# Agent Ports
SOCIAL_AGENT_PORT=8001
SALES_AGENT_PORT=8002
SIGNAL_AGENT_PORT=8003
FORECAST_AGENT_PORT=8004
SUPPLY_AGENT_PORT=8005
RISK_AGENT_PORT=8006
SUSTAINABILITY_AGENT_PORT=8007
XAI_AGENT_PORT=8008
ORCHESTRATOR_PORT=9000

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# Feature Flags
ENABLE_SOCIAL_TRENDS=true
ENABLE_AI_SUMMARIES=false
ENABLE_MULTI_TENANT=true
ENABLE_CACHING=true
